<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">

  <ui:style>
    .btn-custom {
      margin: 3px 3px 3px 3px;
      height: 34px;
      /*padding: 3px;*/
    }
  </ui:style>
  <ui:with field='img' type='org.activityinfo.ui.client.icon.ImageResources'/>

  <g:HTMLPanel addStyleNames="ai bs">
    <g:HorizontalPanel width="100%">
      <g:VerticalPanel width="100%">
        <g:SuggestBox ui:field="suggestBox" width="100%" addStyleNames="form-control"/>
        <g:ListBox multipleSelect="true" ui:field="selectedList" width="100%" addStyleNames="form-control"/>
      </g:VerticalPanel>
      <g:VerticalPanel>
        <g:Button ui:field="addButton" addStyleNames="btn btn-default {style.btn-custom}">
          <img src="{img.add.getSafeUri}" alt="Add"/>
        </g:Button>
        <g:Button ui:field="removeButton" addStyleNames="btn btn-default {style.btn-custom}">
          <img src="{img.delete.getSafeUri}" alt="Remove"/>
        </g:Button>
      </g:VerticalPanel>
    </g:HorizontalPanel>
  </g:HTMLPanel>
</ui:UiBinder>