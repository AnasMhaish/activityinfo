<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

  <changeSet author="alex" id="022-01">
    <comment>
      Relax character limits
    </comment>
    <modifyDataType tableName="activity" columnName="name" newDataType="varchar(1000)"/>
    <modifyDataType tableName="activity" columnName="category" newDataType="varchar(1000)"/>
    <modifyDataType tableName="database" columnName="name" newDataType="varchar(100)"/>
    <modifyDataType tableName="database" columnName="fullName" newDataType="longtext"/>
    <modifyDataType tableName="project" columnName="name" newDataType="varchar(1000)"/>
    <modifyDataType tableName="attributegroup" columnName="name" newDataType="varchar(1000)"/>
    <modifyDataType tableName="attributegroup" columnName="category" newDataType="varchar(1000)"/>
    <modifyDataType tableName="attribute" columnName="name" newDataType="varchar(1000)"/>
    <modifyDataType tableName="partner" columnName="name" newDataType="varchar(1000)"/>
    <modifyDataType tableName="partner" columnName="fullname" newDataType="longtext"/>
    <modifyDataType tableName="indicator" columnName="category" newDataType="varchar(1000)"/>
    <modifyDataType tableName="location" columnName="name" newDataType="varchar(1000)"/>
  </changeSet>
</databaseChangeLog>

