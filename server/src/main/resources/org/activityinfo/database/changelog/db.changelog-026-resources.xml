<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

  <changeSet author="alex" id="026-01">
    <comment>
      Migration towards resources
    </comment>
    <createTable tableName="resource">
      <column name="id" type="varchar(64)">
        <constraints nullable="false" primaryKey="true"/>
      </column>
      <column name="ownerId" type="varchar(64)">
        <constraints nullable="false"/>
      </column>
      <column name="classId" type="varchar(64)"/>
      <column name="json" type="longtext"/>
    </createTable>
    <createIndex indexName="idx_resource_owner"
                 tableName="resource"
                 unique="false">
      <column name="ownerId" type="varchar(64)"/>
    </createIndex>
    <createIndex indexName="idx_resource_class"
                 tableName="resource"
                 unique="false">
      <column name="classId" type="varchar(64)"/>
    </createIndex>
  </changeSet>
  <changeSet id="026-02" author="alex">
    <comment>Set resource id key to be case sensitive</comment>
    <sql>
      ALTER TABLE resource MODIFY id VARCHAR(64) BINARY
    </sql>
  </changeSet>

</databaseChangeLog>