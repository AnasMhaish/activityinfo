<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui" 
  xmlns:c="urn:import:com.google.gwt.user.cellview.client"
  xmlns:a="urn:import:org.activityinfo.client.importer.page">
  <ui:style type='org.activityinfo.client.importer.page.ColumnMappingPage.Style'>
  	
  	.selectedColumn {
		background-color: yellow;
	}
	
	.importTable td {
		font-size: 10px;
	 	white-space: nowrap;
	}
  
  </ui:style>
  <g:DockLayoutPanel unit="PX">

    <g:north size="35">
      <g:HTMLPanel>
        <h2>Match your tables columns</h2>
        <p>You need to tell ActivityInfo what each of your columns
          contains.</p>
      </g:HTMLPanel>
    </g:north>
    <g:center>
      <a:ColumnMappingGrid ui:field="dataGrid" width="100%" styleName="{style.importTable}" />
    </g:center>
    <g:east size="250">
      <g:HTMLPanel>
        <h2 ui:field="columnChooserHeader"/>
      
        <a:PropertyChooser ui:field="propertyChooser"/>
      </g:HTMLPanel>
    </g:east>
  </g:DockLayoutPanel>
</ui:UiBinder> 