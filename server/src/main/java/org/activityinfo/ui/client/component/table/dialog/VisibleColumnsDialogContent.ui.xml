<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:a="urn:import:org.activityinfo.ui.client.widget"
        >

  <ui:with field='img' type='org.activityinfo.ui.client.style.legacy.icon.ImageResources'/>
  <ui:with field='i18n' type='org.activityinfo.i18n.shared.UiConstants'/>
  <ui:with field='style' type='org.activityinfo.ui.client.component.table.InstanceTableStyle'/>

  <g:HTMLPanel>
    <div class="row">
      <div class="col-sm-5">
        <a:TextBox ui:field="filterColumnTable" placeholder="{i18n.filterByName}" styleName="form-control input-sm"/>
      </div>
      <div class="col-sm-1">
      </div>
      <div class="col-sm-5">
      </div>
    </div>
    <div class="row">
      <div class="col-sm-5">
        <h4>
          <ui:text from='{i18n.allColumns}'/>
        </h4>
        <g:HTMLPanel ui:field="columnTableContainer"/>
      </div>
      <div class="col-sm-1">
        <br/><br/>
        <a:ButtonWithSize ui:field="upButton" style="DEFAULT" size="EXTRA_SMALL">
          <img src="{img.up.getSafeUri}" alt="{i18n.moveUp}" title="{i18n.moveUp}"/>
        </a:ButtonWithSize>
        <a:ButtonWithSize ui:field="downButton" style="DEFAULT" size="EXTRA_SMALL">
          <img src="{img.down.getSafeUri}" alt="{i18n.moveDown}" title="{i18n.moveDown}"/>
        </a:ButtonWithSize>
        <a:ButtonWithSize ui:field="removeButton" style="DEFAULT" size="EXTRA_SMALL">
          <img src="{img.delete.getSafeUri}" alt="{i18n.delete}" title="{i18n.delete}"/>
        </a:ButtonWithSize>
        <br/>
        <br/>
        <a:ButtonWithSize ui:field="rightButton" style="DEFAULT" size="EXTRA_SMALL">
          <img src="{img.moveRight.getSafeUri}" alt="{i18n.moveRight}" title="{i18n.moveRight}"/>
        </a:ButtonWithSize>
        <br/>
      </div>
      <div class="col-sm-5">
        <h4>
          <ui:text from='{i18n.visibleColumns}'/>
        </h4>
        <g:HTMLPanel ui:field="selectedColumnTableContainer"/>
      </div>
    </div>
  </g:HTMLPanel>
</ui:UiBinder>