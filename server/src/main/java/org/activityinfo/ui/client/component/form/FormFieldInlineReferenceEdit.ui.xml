<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:cell="urn:import:com.google.gwt.user.cellview.client"
             xmlns:a="urn:import:org.activityinfo.ui.client.widget"
        >

  <ui:with field="icons" type="org.activityinfo.ui.client.style.Icons"/>
  <ui:with field='i18n' type='org.activityinfo.i18n.shared.UiConstants'/>
  <ui:with field='style' type='org.activityinfo.ui.client.component.form.FormPanelStyles'/>

  <g:HTMLPanel>
    <div class="form-group">
      <label class="col-sm-1 control-label">
        <ui:text from='{i18n.cardinality}'/>
      </label>
      <div class="col-sm-11">
        <a:RadioButton name="cardinality" ui:field="singleChoice" formValue="true">
          <ui:text from='{i18n.singleChoice}'/>
        </a:RadioButton>
        <a:RadioButton name="cardinality" ui:field="multipleChoice">
          <ui:text from='{i18n.multipleChoice}'/>
        </a:RadioButton>
        <br/>
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-1 control-label">
        <ui:text from='{i18n.referTo}'/>
      </label>
      <div class="col-sm-11">
        <g:ListBox ui:field="referType" addStyleNames="form-control"/>
      </div>
    </div>

    <div class="form-group" ui:field="newFormNameContainer">
      <label class="col-sm-1 control-label">
        <ui:text from='{i18n.name}'/>
      </label>
      <div class="col-sm-11">
        <a:TextBox ui:field="newFormName"/>
      </div>
    </div>

    <div class="form-group" ui:field="valuesContainer">
      <label class="col-sm-1 control-label">
        <ui:text from='{i18n.values}'/>
      </label>
      <div class="col-sm-11">
        <div class="panel panel-default">
          <div class="panel-body">
            <g:HorizontalPanel>
              <cell:CellTable ui:field="table" tableLayoutFixed="true" autoHeaderRefreshDisabled="true"
                              autoFooterRefreshDisabled="true" rowCount="10"/>
              <g:VerticalPanel>
                <a:Button ui:field="addButton" style="DEFAULT" addStyleNames="{style.referenceBtn}">
                  <span class="{icons.add}"/>
                </a:Button>
                <a:Button ui:field="removeButton" style="DEFAULT" addStyleNames="{style.referenceBtn}">
                  <span class="{icons.remove}"/>
                </a:Button>
              </g:VerticalPanel>
            </g:HorizontalPanel>
            <br/>
            <div class="has-error">
              <div class="help-block" ui:field="errorContainer"/>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="form-group" ui:field="existingFormContainer">
      <label class="col-sm-1 control-label">
        <ui:text from='{i18n.selectFrom}'/>
      </label>
      <div class="col-sm-11">
        <g:SuggestBox ui:field="existingForm" addStyleNames="form-control"/>
      </div>
    </div>
  </g:HTMLPanel>
</ui:UiBinder>