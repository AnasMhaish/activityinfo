<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:a='urn:import:org.activityinfo.ui.client.widget'>

    <ui:with field="icons" type="org.activityinfo.ui.client.style.Icons"/>

    <g:HeaderPanel styleName="container">

        <!-- Header -->
        <g:HTMLPanel>

            <h1 ui:field="nameElement"/>

            <div ui:field="breadCrumbElement"/>

        </g:HTMLPanel>

        <!-- Main -->
        <g:DockLayoutPanel unit="EM" width="100%" height="100%">
            <g:center>
                <a:AsyncPanel ui:field="contentPanel" width="100%" height="100%"/>
            </g:center>

            <g:east size="20" >
                <g:HTMLPanel>

                <h2>Common Tasks</h2>

                <a:ButtonWithIcon style="LINK" iconStyle="{icons.delete}" text="Add New"/>

                <a:ButtonWithIcon style="LINK" iconStyle="{icons.editForm}" text="Open Form"/>

                <a:ButtonWithIcon style="LINK" iconStyle="{icons.delete}" text="Deleted Selected"/>

                <a:ButtonWithIcon style="LINK" iconStyle="{icons.importIcon}" text="Import"/>

                <a:ButtonWithIcon style="LINK" iconStyle="{icons.excelFile}" text="Export the data to Excel"/>

                </g:HTMLPanel>
            </g:east>
        </g:DockLayoutPanel>
    </g:HeaderPanel>
</ui:UiBinder>