             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:a="urn:import:org.activityinfo.ui.client.widget">

  <ui:with field='i18n' type='org.activityinfo.i18n.shared.UiConstants'/>

  <g:HTMLPanel addStyleNames="bs">
    <g:PopupPanel autoHideEnabled="false" modal="true" ui:field="dialog" styleName="ai">
      <g:HTMLPanel>
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <g:Button addStyleNames="close" ui:field="closeButton" text="Ã—"/>
              <h4 class="modal-title" ui:field="title"/>
            </div>
            <div class="modal-body" ui:field="modalBody">
            </div>
            <div class="modal-footer" ui:field="modalFooter">
              <a:Button style="PRIMARY" text="{i18n.ok}" ui:field="okButton"/>
              <a:Button style="DEFAULT" text="{i18n.cancel}" ui:field="cancelButton"/>
            </div>
          </div>
        </div>
      </g:HTMLPanel>
    </g:PopupPanel>
  </g:HTMLPanel>
</ui:UiBinder>