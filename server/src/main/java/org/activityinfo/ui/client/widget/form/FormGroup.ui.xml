<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">

  <g:HTMLPanel width="100%" ui:field="panel">

    <!-- Field-->
    <div class="form-group">
      <label class="control-label" ui:field="label"/>
      <g:HTMLPanel ui:field="widget"/>
    </div>

    <!-- Validation message -->
    <g:HTMLPanel addStyleNames="form-group has-error" ui:field="messageContainer">
      <div ui:field="validationMargin"/>
      <div class="help-block" ui:field="validationMessage"/>
    </g:HTMLPanel>

  </g:HTMLPanel>

</ui:UiBinder>