<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:form="urn:import:org.activityinfo.ui.client.component.form">

  <ui:with field='i18n' type='org.activityinfo.i18n.shared.UiConstants'/>
  <ui:with field='style' type='org.activityinfo.ui.client.component.form.FormPanelStyles'/>

  <g:HTMLPanel addStyleNames="{style.sectionMarginLeft}">
    <form:FormSectionInlineEdit ui:field="editPanel" addStyleNames="hidden"/>
    <form:FormSectionInlineEdit ui:field="addPanel" addStyleNames="hidden"/>
    <div ui:field="sectionRowContainer">
      <div class="row">
        <div class="col-sm-8">
          <h3>
            <g:HTML ui:field="label"/>
          </h3>
        </div>
        <div class="col-sm-4">
          <br/>
          <form:RowToolbar ui:field="toolbar"/>
        </div>
      </div>
      <hr/>
      <form:FormFieldInlineEdit ui:field="addFieldPanel" addStyleNames="hidden"/>
      <g:FlowPanel ui:field="contentPanel" width="100%">
      </g:FlowPanel>
    </div>
  </g:HTMLPanel>
</ui:UiBinder>