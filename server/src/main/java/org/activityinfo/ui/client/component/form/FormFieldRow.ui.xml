<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:form="urn:import:org.activityinfo.ui.client.component.form">

  <ui:with field='img' type='org.activityinfo.ui.client.style.legacy.icon.ImageResources'/>
  <ui:with field='i18n' type='org.activityinfo.i18n.shared.UiConstants'/>
  <ui:with field='style' type='org.activityinfo.ui.client.component.form.FormPanelStyles'/>

  <g:HTMLPanel addStyleNames="bs">
    <form:FormSectionInlineEdit ui:field="addSectionPanel" addStyleNames="{style.fieldRow} hidden"/>
    <form:FormFieldInlineEdit ui:field="editFieldPanel" addStyleNames="hidden" editMode="true"/>
    <form:FormFieldInlineEdit ui:field="addFieldPanel" addStyleNames="hidden"/>
    <div class="row {style.fieldRow}" ui:field="rowContainer">
      <div class="col-sm-2 has-error">
        <div ui:field="label" style="display:inline;"/>
        <div class="help-block hidden" ui:field="requiredMarker" style="display:inline;">*</div>
      </div>
      <div class="col-sm-3">
        <g:FlowPanel ui:field="control" width="100%"/>
      </div>
      <div class="col-sm-1">
        <div ui:field="unit"/>
      </div>
      <div class="col-sm-3">
        <div ui:field="description"/>
      </div>
      <div class="col-sm-3">
        <form:RowToolbar ui:field="toolbar"/>
      </div>
    </div>
  </g:HTMLPanel>
</ui:UiBinder>