<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:a="urn:import:org.activityinfo.ui.client.widget"
             xmlns:form="urn:import:org.activityinfo.ui.client.component.form"

        >

  <ui:with field='img' type='org.activityinfo.ui.client.style.legacy.icon.ImageResources'/>
  <ui:with field='i18n' type='org.activityinfo.i18n.shared.UiConstants'/>
  <ui:with field='style' type='org.activityinfo.ui.client.component.form.FormPanelStyles'/>

  <g:HTMLPanel>

    <form class="form-horizontal" role="form">

      <div class="form-group">
        <label class="col-sm-1 control-label">
          <ui:text from='{i18n.fieldLabel}'/>
        </label>
        <div class="col-sm-11">
          <a:TextBox width="100%" ui:field="label" placeholder="{i18n.fieldLabel}"/>
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-1 control-label">
          <ui:text from='{i18n.fieldType}'/>
        </label>

        <div class="col-sm-11">
          <form:FormFieldTypeCombobox addStyleNames="{style.showInline}" width="92%" ui:field="type" multipleSelect="false"/>
          <a:Button style="DEFAULT" visible="false" text="{i18n.change}" ui:field="changeButton"/>
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-1 control-label">
          <ui:text from='{i18n.fieldDescription}'/>
        </label>
        <div class="col-sm-11">
          <a:TextArea visibleLines="3" width="100%" ui:field="description"  placeholder="{i18n.fieldDescription}"/>
        </div>
      </div>

      <div class="form-group hidden" ui:field="unitContainer">
        <label class="col-sm-1 control-label">
          <ui:text from='{i18n.fieldUnit}'/>
        </label>
        <div class="col-sm-11">
          <a:TextBox width="100%" ui:field="unit"/>
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-1 control-label">
          <ui:text from='{i18n.mandatory}'/>
        </label>
        <div class="col-sm-11">
          <a:CheckBox ui:field="required"/>
        </div>
      </div>

      <div class="hidden" ui:field="referenceContainer">
        <form:FormFieldInlineReferenceEdit ui:field="referencePanel"/>
      </div>

      <div class="form-group">
        <label class="col-sm-1 control-label"/>
        <div class="col-sm-11">
          <a:Button style="PRIMARY" text="{i18n.ok}" ui:field="okButton"/>
          <a:Button style="DEFAULT" text="{i18n.cancel}" ui:field="cancelButton"/>
        </div>
      </div>
    </form>
    <br/>
    <div class="has-error">
      <div class="help-block" ui:field="errorContainer"/>
    </div>
  </g:HTMLPanel>
</ui:UiBinder>