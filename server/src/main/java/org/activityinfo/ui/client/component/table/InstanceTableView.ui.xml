<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:a="urn:import:org.activityinfo.ui.client.widget"
             xmlns:table="urn:import:org.activityinfo.ui.client.component.table"
        >

  <ui:with field='img' type='org.activityinfo.ui.client.style.legacy.icon.ImageResources'/>
  <ui:with field='i18n' type='org.activityinfo.i18n.shared.UiConstants'/>
  <ui:with field='style' type='org.activityinfo.ui.client.component.table.InstanceTableStyle'/>

  <g:HTMLPanel>

    <!-- Use a div to measure the font size -->
    <div ui:field="emRuler" style="position:absolute; width:100em;"/>

    <div ui:field="toolbar" class="{style.toolbar}">
      <a:ButtonWithSize ui:field="configureButton" style="PRIMARY" size="EXTRA_SMALL">
        <img src="{img.configure.getSafeUri}" alt="{i18n.configure}" title="{i18n.configure}"/>
      </a:ButtonWithSize>
      <a:ButtonWithSize ui:field="filterButton" style="PRIMARY" size="EXTRA_SMALL">
        <img src="{img.filter.getSafeUri}" alt="{i18n.filter}" title="{i18n.filter}"/>
      </a:ButtonWithSize>
      <a:ButtonWithSize ui:field="blukEditButton" style="PRIMARY" size="EXTRA_SMALL">
        <img src="{img.edit.getSafeUri}" alt="{i18n.bulkEdit}" title="{i18n.bulkEdit}"/>
      </a:ButtonWithSize>
      <a:ButtonWithSize ui:field="addButton" style="SUCCESS" size="EXTRA_SMALL">
        <img src="{img.add.getSafeUri}" alt="{i18n.addInstance}" title="{i18n.addInstance}"/>
      </a:ButtonWithSize>
      <a:ButtonWithSize ui:field="removeButton" style="DANGER" size="EXTRA_SMALL">
        <img src="{img.delete.getSafeUri}" alt="{i18n.removeInstance}" title="{i18n.removeInstance}"/>
      </a:ButtonWithSize>
    </div>

    <!-- If we can display all the columns, inform the user -->
    <div ui:field="columnAlert" class="alert"/>

    <table:InstanceTable ui:field="table"/>

  </g:HTMLPanel>
</ui:UiBinder>