<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:validation="urn:import:org.activityinfo.ui.client.component.importDialog.validation">
  <ui:style>

  </ui:style>
  <g:HeaderPanel>
    <g:HTMLPanel>
      <h3>Validate the imported rows</h3>
      <p>Correct any problems with the imported rows and fill in missing columns</p>
      <p ui:field="loadingElement">Matching references...</p>
      <p ui:field="loadingErrorElement">There was an error matching references.
        <g:InlineHyperlink ui:field="retryLink">Retry</g:InlineHyperlink></p>
    </g:HTMLPanel>
    <validation:ValidationGrid ui:field="dataGrid" width="100%" height="100%"/>
  </g:HeaderPanel>
</ui:UiBinder>