<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:a="urn:import:org.activityinfo.ui.client.widget"
             xmlns:form="urn:import:org.activityinfo.ui.client.component.form"
        >

  <ui:with field="icons" type="org.activityinfo.ui.client.style.Icons"/>
  <ui:with field='i18n' type='org.activityinfo.i18n.shared.UiConstants'/>
  <ui:with field='style' type='org.activityinfo.ui.client.component.form.FormPanelStyles'/>

  <g:HTMLPanel addStyleNames="bs">
    <div class="container">
      <br/>
      <div class="pull-left" style="width: 200px">
        <g:Button addStyleNames="btn btn-default" ui:field="undoButton" title="{i18n.undo}">
          <span class="{icons.undo}"/>
        </g:Button>
        <g:Button addStyleNames="btn btn-default" ui:field="redoButton" title="{i18n.redo}">
          <span class="{icons.redo}"/>
        </g:Button>
        <g:Button addStyleNames="btn btn-success hidden" ui:field="addSectionButton" title="{i18n.addSection}">
          <span class="{icons.add2}"/>
        </g:Button>
        <g:Button addStyleNames="btn btn-success hidden" ui:field="addFieldButton" title="{i18n.addField}">
          <span class="{icons.add}"/>
        </g:Button>
      </div>
      <div class="pull-right">
        <div class="pull-left hidden" ui:field="progressDiv">
          <!--<span class="{icons.progress}"/>-->
        </div>
        <a:Button style="PRIMARY" ui:field="saveButton" text="{i18n.save}"/>
        <a:Button style="DEFAULT" ui:field="resetButton" text="{i18n.reset}"/>
      </div>
      <br/>
      <br/>
      <div class="has-error">
        <div class="help-block" ui:field="errorContainer"/>
      </div>
      <br/>
      <g:FlowPanel ui:field="contentPanel" width="100%">
        <form:FormSectionInlineEdit ui:field="addSectionPanel" addStyleNames="{style.sectionMarginLeft} hidden"/>
        <form:FormFieldInlineEdit ui:field="addFieldPanel" addStyleNames="{style.sectionMarginLeft} hidden"/>
      </g:FlowPanel>
    </div>
  </g:HTMLPanel>
</ui:UiBinder>