<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:form="urn:import:org.activityinfo.ui.client.component.form">

  <ui:with field='img' type='org.activityinfo.ui.client.icon.ImageResources'/>
  <ui:with field='i18n' type='org.activityinfo.i18n.shared.UiConstants'/>
  <ui:with field='style' type='org.activityinfo.ui.client.style.TransitionBundle'/>

  <g:HTMLPanel addStyleNames="bs">
    <div class="container">
      <br/>
      <div class="pull-left" style="width: 200px">
        <g:Button addStyleNames="btn btn-default" ui:field="undoButton" title="{i18n.undo}">
          <img src="{img.undo.getSafeUri}" alt="{i18n.undo}"/>
        </g:Button>
        <g:Button addStyleNames="btn btn-default" ui:field="redoButton" title="{i18n.redo}">
          <img src="{img.redo.getSafeUri}" alt="{i18n.redo}"/>
        </g:Button>
        <g:Button addStyleNames="btn btn-success hidden" ui:field="addSectionButton" title="{i18n.addSection}">
          <img src="{img.addFolder.getSafeUri}" alt="{i18n.add}"/>
        </g:Button>
        <g:Button addStyleNames="btn btn-success hidden" ui:field="addFieldButton" title="{i18n.addField}">
          <img src="{img.add.getSafeUri}" alt="{i18n.add}"/>
        </g:Button>
      </div>
      <div class="pull-right">
        <div class="pull-left hidden" ui:field="progressDiv">
          <img src="{img.progress.getSafeUri}" alt="Progress"/>
        </div>
        <g:Button addStyleNames="btn btn-primary" ui:field="saveButton" text="{i18n.save}"/>
        <g:Button addStyleNames="btn btn-default" ui:field="resetButton" text="{i18n.reset}"/>
      </div>
      <br/>
      <div class="has-error">
        <div class="control-label" ui:field="errorContainer"/>
      </div>
      <br/>
      <g:FlowPanel ui:field="contentPanel" width="100%">
        <form:FormSectionInlineEdit ui:field="addSectionPanel" addStyleNames="{style.newUiStyle.sectionMarginLeft} hidden"/>
        <form:FormFieldInlineEdit ui:field="addFieldPanel" addStyleNames="{style.newUiStyle.sectionMarginLeft} hidden"/>
      </g:FlowPanel>
    </div>
  </g:HTMLPanel>
</ui:UiBinder>