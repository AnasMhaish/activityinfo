<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:field="urn:import:org.activityinfo.ui.client.component.form.field">
  <g:HTMLPanel addStyleNames="form-group">
    <label ui:field="label" class="control-label"/>
    <field:FormFieldWidget ui:field="fieldWidget"/>
    <span class="hide help-block" ui:field="helpText"/>
    <span class="hide help-block" ui:field="validationMessage"/>
  </g:HTMLPanel>
</ui:UiBinder>