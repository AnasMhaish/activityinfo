<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:a="urn:import:org.activityinfo.ui.client.widget">

  <ui:import field="org.activityinfo.ui.client.page.config.design.dialog.NewFormDialog.CLASSIC_VIEW_EXPLANATION_URL" />
  <ui:with field="i18n" type="org.activityinfo.i18n.shared.UiConstants"/>

  <g:HTMLPanel width="100%" ui:field="panel" addStyleNames="form-horizontal">

    <!-- Name field-->
    <div class="form-group">
      <label class="control-label col-xs-4">
        <ui:text from='{i18n.name}'/>
      </label>
      <div class="col-xs-8">
        <a:TextBox ui:field="nameField" width="100%"/>
      </div>
    </div>

    <!-- Category -->
    <div class="form-group">
      <label class="control-label col-xs-4">
        <ui:text from='{i18n.category}'/>
      </label>
      <div class="col-xs-8">
        <a:TextBox ui:field="categoryField" width="100%"/>
      </div>
    </div>

    <!-- Style: form designer (new) -->
    <div class="form-group">
      <label class="control-label col-xs-4">
        <ui:text from='{i18n.style}'/>
      </label>
      <div class="col-xs-8">
        <a:RadioButton ui:field="formDesigner" name="group" text="{i18n.newFormAsFormDesigner}" width="100%"/>
      </div>
    </div>

    <!-- Style: classic (old) -->
    <div class="form-group">
      <div class="col-xs-4"/>
      <div class="col-xs-8">
        <a:RadioButton ui:field="classic" name="group" text="{i18n.newFormAsClassic}" width="100%"/>
      </div>
    </div>

    <!-- Style: classic monthly (old) -->
    <div class="form-group">
      <div class="col-xs-4"/>
      <div class="col-xs-8">
        <a:RadioButton ui:field="classicMonthly" name="group" text="{i18n.newFormAsClassicMonthly}" width="100%"/>
      </div>
    </div>

    <!-- Link that explains the difference between classic and modern view -->
    <div class="form-group">
      <div class="col-xs-4"/>
      <div class="col-xs-8">
        <g:Anchor ui:field="explanationLink" target="_blank"><ui:text from='{i18n.showMeTheDifference}'/></g:Anchor>
      </div>
    </div>

    <!-- Error messages -->
    <g:HTMLPanel addStyleNames="form-group has-error" ui:field="errorContainer">
      <div class="col-xs-4"/>
      <div class="col-xs-8 help-block" ui:field="errorMessage"/>
    </g:HTMLPanel>

  </g:HTMLPanel>

</ui:UiBinder>