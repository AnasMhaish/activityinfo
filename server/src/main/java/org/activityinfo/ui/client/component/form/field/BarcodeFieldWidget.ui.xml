<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:a='urn:import:org.activityinfo.ui.client.widget'>

  <ui:with field="i18n" type="org.activityinfo.i18n.shared.UiConstants"/>

  <g:HTMLPanel>
    <div class="field-element">
      <a:TextBox ui:field="textBox" styleName="form-control"/>
      <a:ButtonWithIcon ui:field="scanButton" text="Scan barcode" iconStyle="fa-barcode" style="DEFAULT"/>
      <g:InlineLabel ui:field="statusLabel"/>
    </div>
  </g:HTMLPanel>
</ui:UiBinder>