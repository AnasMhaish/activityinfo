<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:a="urn:import:org.activityinfo.ui.client.widget"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">

  <ui:with field="icons" type="org.activityinfo.ui.client.style.Icons"/>
  <ui:with field='i18n' type='org.activityinfo.i18n.shared.UiConstants'/>
  <ui:with field='style' type='org.activityinfo.ui.client.component.form.FormPanelStyles'/>

  <g:HTMLPanel>
    <div class="pull-right">
      <a:Button ui:field="newClassButton" style="DEFAULT" text="{i18n.newFormClass}"/>
    </div>
    <div class="pull-left" style="width: 50%;">
      <g:HorizontalPanel width="100%">
        <g:VerticalPanel width="100%">
          <a:SuggestBox ui:field="suggestBox" width="100%" addStyleNames="form-control"/>
          <g:ListBox multipleSelect="true" ui:field="selectedList" width="100%" addStyleNames="form-control"/>
        </g:VerticalPanel>
        <g:VerticalPanel>
          <g:Button ui:field="addButton" addStyleNames="btn btn-default {style.referenceBtn}">
            <span class="{icons.add}"/>
          </g:Button>
          <g:Button ui:field="removeButton" addStyleNames="btn btn-default {style.referenceBtn}">
            <span class="{icons.remove}"/>
          </g:Button>
          <g:Button ui:field="editButton" addStyleNames="btn btn-default {style.referenceBtn}">
            <span class="{icons.edit}"/>
          </g:Button>
        </g:VerticalPanel>
      </g:HorizontalPanel>
    </div>
  </g:HTMLPanel>
</ui:UiBinder>