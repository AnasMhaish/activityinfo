<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:a="urn:import:org.activityinfo.ui.client.widget"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">

  <ui:with field="icons" type="org.activityinfo.ui.client.style.Icons"/>
  <ui:with field='i18n' type='org.activityinfo.i18n.shared.UiConstants'/>
  <ui:with field='style' type='org.activityinfo.ui.client.component.form.FormPanelStyles'/>

  <g:HTMLPanel addStyleNames="bs">
    <div ui:field="toolbar" class="hidden {style.toolbar}">
      <g:Button styleName="btn btn-primary btn-xs" ui:field="editButton">
        <span class="{icons.edit}"/>
      </g:Button>
      <g:Button styleName="btn btn-success btn-xs" ui:field="addSectionButton">
        <span class="{icons.plus}"/>
      </g:Button>
      <g:Button styleName="btn btn-success btn-xs"  ui:field="addButton">
        <span class="{icons.add}"/>
      </g:Button>
      <g:Button styleName="btn btn-danger btn-xs" ui:field="removeButton">
        <span class="{icons.remove}"/>
      </g:Button>
      <g:Button styleName="btn btn-default btn-xs" ui:field="upButton">
        <span class="{icons.arrowUp}"/>
      </g:Button>
      <g:Button styleName="btn btn-default btn-xs" ui:field="downButton">
        <span class="{icons.arrowDown}"/>
      </g:Button>
    </div>
  </g:HTMLPanel>
</ui:UiBinder>