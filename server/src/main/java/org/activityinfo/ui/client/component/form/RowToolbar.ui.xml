<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:a="urn:import:org.activityinfo.ui.client.widget"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">

  <ui:with field='img' type='org.activityinfo.ui.client.style.legacy.icon.ImageResources'/>
  <ui:with field='i18n' type='org.activityinfo.i18n.shared.UiConstants'/>
  <ui:with field='style' type='org.activityinfo.ui.client.component.form.FormPanelStyles'/>

  <g:HTMLPanel addStyleNames="bs">
    <div ui:field="toolbar" class="hidden {style.toolbar}">
      <a:ButtonWithSize ui:field="editButton" style="PRIMARY" size="EXTRA_SMALL">
        <img src="{img.edit.getSafeUri}" alt="{i18n.edit}" title="{i18n.edit}"/>
      </a:ButtonWithSize>
      <a:ButtonWithSize ui:field="addSectionButton" style="SUCCESS" size="EXTRA_SMALL">
        <img src="{img.addFolder.getSafeUri}" alt="{i18n.addSection}" title="{i18n.addSection}"/>
      </a:ButtonWithSize>
      <a:ButtonWithSize ui:field="addButton" style="SUCCESS" size="EXTRA_SMALL">
        <img src="{img.add.getSafeUri}" alt="{i18n.addField}" title="{i18n.addField}"/>
      </a:ButtonWithSize>
      <a:ButtonWithSize ui:field="removeButton" style="DANGER" size="EXTRA_SMALL">
        <img src="{img.delete.getSafeUri}" alt="{i18n.remove}" title="{i18n.remove}"/>
      </a:ButtonWithSize>
      <a:ButtonWithSize ui:field="upButton" style="DEFAULT" size="EXTRA_SMALL">
        <img src="{img.up.getSafeUri}" alt="{i18n.moveUp}" title="{i18n.moveUp}"/>
      </a:ButtonWithSize>
      <a:ButtonWithSize ui:field="downButton" style="DEFAULT" size="EXTRA_SMALL">
        <img src="{img.down.getSafeUri}" alt="{i18n.moveDown}" title="{i18n.moveDown}"/>
      </a:ButtonWithSize>
    </div>
  </g:HTMLPanel>
</ui:UiBinder>