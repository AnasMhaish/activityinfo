<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:a="urn:import:org.activityinfo.ui.client.widget"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">

  <ui:with field='img' type='org.activityinfo.ui.client.style.legacy.icon.ImageResources'/>
  <ui:with field='style' type='org.activityinfo.ui.client.component.form.FormPanelStyles'/>

  <g:HTMLPanel>
    <g:HorizontalPanel width="100%">
      <g:VerticalPanel width="100%">
        <a:SuggestBox ui:field="suggestBox" width="100%" addStyleNames="form-control"/>
        <g:ListBox multipleSelect="true" ui:field="selectedList" width="100%" addStyleNames="form-control"/>
      </g:VerticalPanel>
      <g:VerticalPanel>
        <g:Button ui:field="addButton" addStyleNames="btn btn-default {style.referenceBtn}">
          <img src="{img.add.getSafeUri}" alt="Add"/>
        </g:Button>
        <g:Button ui:field="removeButton" addStyleNames="btn btn-default {style.referenceBtn}">
          <img src="{img.delete.getSafeUri}" alt="Remove"/>
        </g:Button>
      </g:VerticalPanel>
    </g:HorizontalPanel>
  </g:HTMLPanel>
</ui:UiBinder>