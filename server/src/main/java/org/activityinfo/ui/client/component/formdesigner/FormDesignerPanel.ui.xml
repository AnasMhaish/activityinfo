<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
        >

  <ui:with field="i18n" type="org.activityinfo.i18n.shared.UiConstants"/>
  <ui:with field="style" type="org.activityinfo.ui.client.component.formdesigner.FormDesignerStyles"/>

  <g:AbsolutePanel ui:field="absolutePanel" width="1140px" height="1000px">
    <g:at left='0' top='10'>
      <g:HTMLPanel width="350px" height="100%">
        <div class="panel panel-default">
          <div class="panel-heading">
            <b>Widgets</b>
          </div>
          <g:AbsolutePanel addStyleNames="panel-body"  width="350px" ui:field="controlBucket"/>
        </div>
        <div class="panel panel-default">
          <div class="panel-heading">
            <b>Properties</b>
          </div>
          <div class="panel-body">
            Properties content
          </div>
        </div>
      </g:HTMLPanel>
    </g:at>
    <g:at left='360' top='10'>
      <g:AbsolutePanel addStyleNames="{style.mainPanel}" width="780px" height="780px" ui:field="dropPanel"/>
    </g:at>
  </g:AbsolutePanel>
</ui:UiBinder>