<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
        >

  <ui:with field="i18n" type="org.activityinfo.i18n.shared.UiConstants"/>
  <ui:with field="style" type="org.activityinfo.ui.client.component.formdesigner.FormDesignerStyles"/>

  <g:AbsolutePanel ui:field="absolutePanel">
    <g:at left='20' top='20'>
      <g:HTMLPanel>
        <div class="panel panel-default">
          <div class="panel-heading">
            <b>Widgets</b>
          </div>
          <g:VerticalPanel addStyleNames="panel-body">
            <g:Button addStyleNames="btn btn-primary btn-xs control" text="Single Line Text" ui:field="singleTextField"/>
            <g:Button addStyleNames="btn btn-primary btn-xs control" text="Multi Line Text" ui:field="multiTextField"/>
            <g:Button addStyleNames="btn btn-primary btn-xs control" text="Number" ui:field="numberField"/>
            <g:Button addStyleNames="btn btn-primary btn-xs control" text="Dropdown" ui:field="dropDownField"/>
            <g:Button addStyleNames="btn btn-default btn-xs control" text="Section break" ui:field="section"/>
          </g:VerticalPanel>
        </div>
      </g:HTMLPanel>
    </g:at>
    <g:at left='20' top='200'>
      <g:HTMLPanel>
        <div class="panel panel-default">
          <div class="panel-heading">
            <b>Properties</b>
          </div>
          <div class="panel-body">
            Properties content
          </div>
        </div>
      </g:HTMLPanel>
    </g:at>
    <g:at left='200' top='20'>
      <g:HTMLPanel addStyleNames="{style.mainPanel}" width="100%" height="100%">
      </g:HTMLPanel>
    </g:at>
  </g:AbsolutePanel>
</ui:UiBinder>