<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:list='urn:import:org.activityinfo.ui.full.client.page.home.list'
             xmlns:ai='urn:import:org.activityinfo.ui.full.client.widget'>
    <g:HeaderPanel styleName="container">

        <!-- Header -->
        <g:HTMLPanel>

            <h1 ui:field="nameElement"/>

            <div ui:field="breadCrumbElement"/>

        </g:HTMLPanel>

        <!-- Main -->
        <g:DockLayoutPanel unit="EM" width="100%" height="100%">
            <g:center>
                <ai:AsyncPanel ui:field="contentPanel" width="100%" height="100%"/>
            </g:center>

            <g:east size="20" >
                <g:HTMLPanel>

                <h2>Common Tasks</h2>
                <ul>
                    <li><a href="#">Getting started with entering data</a></li>
                    <li><a href="#">Export data to Excel</a></li>
                    <li><a href="#">Create a map from your data</a></li>
                </ul>
                </g:HTMLPanel>
            </g:east>
        </g:DockLayoutPanel>
    </g:HeaderPanel>
</ui:UiBinder>