<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:a="urn:import:org.activityinfo.ui.full.client.importer.ui.mapping"
             xmlns:b="urn:import:org.activityinfo.ui.full.client.widget.bootstrap">

  <ui:with field="i18n" type="org.activityinfo.ui.full.client.i18n.UIConstants"/>
  <ui:with field="style" type="org.activityinfo.ui.full.client.importer.ui.mapping.ColumnMappingStyles"/>

  <g:HeaderPanel styleName="{style.page}">

    <!-- Header -->
    <g:HTMLPanel>
      <h3 ui:field="promptHeading"/>
    </g:HTMLPanel>

    <!-- Body -->
    <g:DockLayoutPanel unit="EM" width="100%" height="100%">
        <g:center>
            <a:ColumnMappingGrid ui:field="dataGrid" width="100%" height="100%"/>
        </g:center>

        <g:east size="20" >
            <b:Panel ui:field="fieldSelectorPanel" style="PRIMARY" addStyleNames="{style.fieldSelector}">
                <g:Label ui:field="fieldSelectorHeading"/>
                <g:HTMLPanel>
                    <p><small><ui:text from="{i18n.chooseDestinationField}"/></small></p>
                    <a:FieldSelector ui:field="fieldSelector"/>
                </g:HTMLPanel>
            </b:Panel>
        </g:east>
    </g:DockLayoutPanel>
  </g:HeaderPanel>
</ui:UiBinder> 