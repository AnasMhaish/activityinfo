<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:org.activityinfo.ui.full.client.widget.bootstrap">

  <ui:style>

  </ui:style>

  <b:ModalHeaderPanel>

      <b:ModalTitle ui:field="titleWidget"/>

      <!-- Center -->
      <g:SimpleLayoutPanel ui:field="pagePanel" height="100%"/>

      <!-- Bottom Panel -->
      <g:HTMLPanel styleName="footer">
          <b:Button ui:field="cancelButton" style="DEFAULT" text="Cancel" tabIndex="1001"/>&nbsp;
          <b:Button ui:field="prevButton" style="DEFAULT" text="« Previous" tabIndex="1002"/>&nbsp;
          <b:Button ui:field="nextButton" style="PRIMARY" text="Next »" tabIndex="1003"/>&nbsp;
          <b:Button ui:field="finishButton" style="PRIMARY" text="Finish" tabIndex="1004"/>
          <span ui:field="statusText"/>
      </g:HTMLPanel>

  </b:ModalHeaderPanel>

</ui:UiBinder> 