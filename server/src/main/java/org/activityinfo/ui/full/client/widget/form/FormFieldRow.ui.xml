<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:ai="urn:import:org.activityinfo.ui.full.client.widget.form">

  <ui:with field='img' type='org.activityinfo.ui.full.client.icon.ImageResources'/>
  <ui:with field='res' type='org.activityinfo.ui.full.client.i18n.UIConstants'/>
  <ui:with field='style' type='org.activityinfo.ui.full.client.style.TransitionBundle'/>

  <g:HTMLPanel addStyleNames="bs">
    <ai:FormSectionInlineEdit ui:field="addSectionPanel" addStyleNames="{style.newUiStyle.marginLeft} hidden"/>
    <div class="row userform-field" ui:field="rowContainer">
      <div class="col-sm-2">
        <p class="edit">
          <div ui:field="label"/>
        </p>
      </div>
      <div class="col-sm-3">
        <g:FlowPanel ui:field="control" width="100%"/>
      </div>
      <div class="col-sm-1">
        <div ui:field="unit"/>
      </div>
      <div class="col-sm-3">
        <p class="text-muted edit">
          <div ui:field="description"/>
        </p>
      </div>
      <div class="col-sm-3">
        <ai:RowToolbar ui:field="toolbar"/>
        <!--<div>-->
        <!--<i title="Map this indicator" class="fa fa-map-marker"/>-->
        <!--<i title="Create a table" class="fa fa-table"/>-->
        <!--<i title="Create a chart of this indicator" class="glyphicon glyphicon-stats"/>-->
        <!--</div>-->
        <!--<div>-->
        <!--<i title="Edit this field" class="fa fa-pencil"/>-->
        <!--<i title="Delete this field" class="fa fa-trash-o"/>-->
        <!--</div>-->
      </div>
    </div>
  </g:HTMLPanel>
</ui:UiBinder>