<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field='label' type='java.lang.String'/>
    <ui:with field='description' type='java.lang.String'/>
    <ui:with field='link' type='java.lang.String'/>

    <div class="media">
        <a class="pull-left" href="{link}">
            <img class="media-object" src="http://placehold.it/64x64"/>
        </a>
        <div class="media-body">
            <h4 class="media-heading"><a href="{link}"><ui:text from="{label}"/></a></h4>
            <p><ui:text from="{description}"/></p>
        </div>
    </div>
</ui:UiBinder>