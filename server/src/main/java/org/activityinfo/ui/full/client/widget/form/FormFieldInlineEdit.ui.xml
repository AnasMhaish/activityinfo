<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:ai="urn:import:org.activityinfo.ui.full.client.widget"
             xmlns:form="urn:import:org.activityinfo.ui.full.client.widget.form"
             xmlns:boot="urn:import:org.activityinfo.ui.full.client.widget.bootstrap"
        >

  <ui:style>
    .row {
      margin-top: 5px;
      margin-bottom: 5px;
    }

    .show-inline {
      display: inline !important
    }

  </ui:style>

  <ui:with field='img' type='org.activityinfo.ui.full.client.icon.ImageResources'/>
  <ui:with field='res' type='org.activityinfo.ui.full.client.i18n.UIConstants'/>
  <ui:with field='aiStyle' type='org.activityinfo.ui.full.client.style.TransitionBundle'/>

  <g:HTMLPanel addStyleNames="bs">

    <form class="form-horizontal" role="form">

      <div class="form-group">
        <label class="col-sm-1 control-label">
          <ui:text from='{res.fieldLabel}'/>
        </label>
        <div class="col-sm-11">
          <boot:TextBox width="100%" ui:field="label" placeholder="{res.fieldLabel}"/>
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-1 control-label">
          <ui:text from='{res.fieldType}'/>
        </label>

        <div class="col-sm-11">
          <ai:FormFieldTypeCombobox addStyleNames="{style.show-inline} form-control" width="92%" ui:field="type"
                                    multipleSelect="false"/>
          <g:Button addStyleNames="btn btn-default hidden" text="{res.change}" ui:field="changeButton"/>
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-1 control-label">
          <ui:text from='{res.fieldDescription}'/>
        </label>
        <div class="col-sm-11">
          <boot:TextArea visibleLines="3" width="100%" ui:field="description"/>
        </div>
      </div>

      <div class="form-group hidden" ui:field="unitContainer">
        <label class="col-sm-1 control-label">
          <ui:text from='{res.fieldUnit}'/>
        </label>
        <div class="col-sm-11">
          <boot:TextBox width="100%" ui:field="unit"/>
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-1 control-label">
          <ui:text from='{res.mandatory}'/>
        </label>
        <div class="col-sm-11">
          <boot:CheckBox ui:field="required"/>
        </div>
      </div>

      <div class="hidden" ui:field="referenceContainer">
        <form:FormFieldInlineReferenceEdit ui:field="referencePanel"/>
      </div>

      <div class="form-group">
        <label class="col-sm-1 control-label"/>
        <div class="col-sm-11">
          <g:Button addStyleNames="btn btn-primary" text="{res.ok}" ui:field="okButton"/>
          <g:Button addStyleNames="btn btn-default" text="{res.cancel}" ui:field="cancelButton"/>
        </div>
      </div>
    </form>
    <br/>
  </g:HTMLPanel>
</ui:UiBinder>