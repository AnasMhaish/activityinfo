<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:a="urn:import:org.activityinfo.ui.full.client.widget"
             xmlns:form="urn:import:org.activityinfo.ui.full.client.widget.form"

        >

  <ui:style>
    .row {
      margin-top: 5px;
      margin-bottom: 5px;
    }

    .show-inline {
      display: inline !important
    }

  </ui:style>

  <ui:with field='img' type='org.activityinfo.ui.full.client.icon.ImageResources'/>
  <ui:with field='res' type='org.activityinfo.ui.full.client.i18n.UIConstants'/>
  <ui:with field='aiStyle' type='org.activityinfo.ui.full.client.style.TransitionBundle'/>

  <g:HTMLPanel>

    <form class="form-horizontal" role="form">

      <div class="form-group">
        <label class="col-sm-1 control-label">
          <ui:text from='{res.fieldLabel}'/>
        </label>
        <div class="col-sm-11">
          <a:TextBox width="100%" ui:field="label" placeholder="{res.fieldLabel}"/>
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-1 control-label">
          <ui:text from='{res.fieldType}'/>
        </label>

        <div class="col-sm-11">
          <form:FormFieldTypeCombobox addStyleNames="{style.show-inline} form-control" width="92%" ui:field="type"
                                    multipleSelect="false"/>
          <a:Button style="DEFAULT" visible="false" text="{res.change}" ui:field="changeButton"/>
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-1 control-label">
          <ui:text from='{res.fieldDescription}'/>
        </label>
        <div class="col-sm-11">
          <a:TextArea visibleLines="3" width="100%" ui:field="description"  placeholder="{res.fieldDescription}"/>
        </div>
      </div>

      <div class="form-group hidden" ui:field="unitContainer">
        <label class="col-sm-1 control-label">
          <ui:text from='{res.fieldUnit}'/>
        </label>
        <div class="col-sm-11">
          <a:TextBox width="100%" ui:field="unit"/>
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-1 control-label">
          <ui:text from='{res.mandatory}'/>
        </label>
        <div class="col-sm-11">
          <a:CheckBox ui:field="required"/>
        </div>
      </div>

      <div class="hidden" ui:field="referenceContainer">
        <form:FormFieldInlineReferenceEdit ui:field="referencePanel"/>
      </div>

      <div class="form-group">
        <label class="col-sm-1 control-label"/>
        <div class="col-sm-11">
          <a:Button style="PRIMARY" text="{res.ok}" ui:field="okButton"/>
          <a:Button style="DEFAULT" text="{res.cancel}" ui:field="cancelButton"/>
        </div>
      </div>
    </form>
    <br/>
    <div class="has-error">
      <div class="help-block" ui:field="errorContainer"/>
    </div>
  </g:HTMLPanel>
</ui:UiBinder>