<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:ai="urn:import:org.activityinfo.ui.full.client.widget.form">

  <ui:with field='img' type='org.activityinfo.ui.full.client.icon.ImageResources'/>
  <ui:with field='res' type='org.activityinfo.ui.full.client.i18n.UIConstants'/>
  <ui:with field='style' type='org.activityinfo.ui.full.client.style.TransitionBundle'/>

  <g:HTMLPanel addStyleNames="bs">
    <g:HTMLPanel>

      <ui:text from='{res.fieldLabel}'/>
      <g:TextBox addStyleNames="form-control" width="100%" ui:field="label"/>
      <br/>

      <ui:text from='{res.fieldType}'/>
      <g:ListBox addStyleNames="form-control" ui:field="type" multipleSelect="false"/>
      <br/>

      <ui:text from='{res.fieldDescription}'/>
      <g:TextArea addStyleNames="form-control" visibleLines="3" width="100%" ui:field="description"/>
      <br/>

      <ui:text from='{res.fieldUnit}'/>
      <g:TextBox addStyleNames="form-control" width="100%" ui:field="unit"/>
      <br/>

      <g:Button addStyleNames="btn btn-primary" text="{res.ok}" ui:field="okButton"/>
      <g:Button addStyleNames="btn btn-default" text="{res.cancel}" ui:field="cancelButton"/>
    </g:HTMLPanel>
  </g:HTMLPanel>
</ui:UiBinder>