<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">

  <ui:style>
    .toobar {
      position: absolute;
      width: 300px;
      /*border: dashed;*/
      /*border-width: 2px;*/
      /*border-color: #000810;*/
    }
  </ui:style>

  <ui:with field='img' type='org.activityinfo.ui.full.client.icon.ImageResources'/>
  <ui:with field='i18n' type='org.activityinfo.i18n.shared.UiConstants'/>

  <g:HTMLPanel addStyleNames="bs">
    <div ui:field="toolbar" class="hidden {style.toobar}">
      <g:Button ui:field="editButton" addStyleNames="btn btn-primary btn-xs">
        <img src="{img.edit.getSafeUri}" alt="{i18n.edit}" title="{i18n.edit}"/>
      </g:Button>
      <g:Button ui:field="addSectionButton" addStyleNames="btn btn-success btn-xs">
        <img src="{img.addFolder.getSafeUri}" alt="{i18n.addSection}" title="{i18n.addSection}"/>
      </g:Button>
      <g:Button ui:field="addButton" addStyleNames="btn btn-success btn-xs">
        <img src="{img.add.getSafeUri}" alt="{i18n.addField}" title="{i18n.addField}"/>
      </g:Button>
      <g:Button ui:field="removeButton" addStyleNames="btn btn-danger btn-xs">
        <img src="{img.delete.getSafeUri}" alt="{i18n.remove}" title="{i18n.remove}"/>
      </g:Button>
      <g:Button ui:field="upButton" addStyleNames="btn btn-default btn-xs">
        <img src="{img.up.getSafeUri}" alt="{i18n.moveUp}" title="{i18n.moveUp}"/>
      </g:Button>
      <g:Button ui:field="downButton" addStyleNames="btn btn-default btn-xs">
        <img src="{img.down.getSafeUri}" alt="{i18n.moveDown}" title="{i18n.moveDown}"/>
      </g:Button>
    </div>
  </g:HTMLPanel>
</ui:UiBinder>