<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">

  <g:HTMLPanel addStyleNames="bs">
    <div class="container">
      <g:FlowPanel ui:field="contentPanel" width="100%">
      </g:FlowPanel>
      <g:HorizontalPanel ui:field="buttonsPanel" width="100%" horizontalAlignment="right">
        <g:HorizontalPanel spacing="3">
          <g:Button addStyleNames="btn btn-default" ui:field="saveButton" text="Save"/>
          <!--&nbsp;-->
          <g:Button addStyleNames="btn btn-primary" ui:field="resetButton" text="Reset"/>
        </g:HorizontalPanel>
      </g:HorizontalPanel>
    </div>
  </g:HTMLPanel>
</ui:UiBinder>