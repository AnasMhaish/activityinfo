<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:ai="urn:import:org.activityinfo.ui.full.client.widget.form">

  <ui:with field='img' type='org.activityinfo.ui.full.client.icon.ImageResources'/>
  <ui:with field='res' type='org.activityinfo.ui.full.client.i18n.UIConstants'/>

  <g:HTMLPanel addStyleNames="bs">
    <div ui:field="sectionRowContainer">
      <div class="row">
        <div class="col-sm-8">
          <h3>
            <g:HTML ui:field="label"/>
          </h3>
        </div>
        <div class="col-sm-4">
          <br/>
          <ai:RowToolbar ui:field="toolbar"/>
        </div>
      </div>
      <hr/>
      <g:FlowPanel ui:field="contentPanel" width="100%">
      </g:FlowPanel>
    </div>
    <ai:FormSectionInlineEdit ui:field="editPanel" addStyleNames="hidden"/>
  </g:HTMLPanel>
</ui:UiBinder>