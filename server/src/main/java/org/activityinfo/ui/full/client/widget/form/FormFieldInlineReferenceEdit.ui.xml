<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:cell="urn:import:com.google.gwt.user.cellview.client"
             xmlns:a="urn:import:org.activityinfo.ui.full.client.widget">

  <ui:style>
    .btn-custom {
      margin: 3px 3px 3px 3px;
      height: 34px;
    }
  </ui:style>

  <ui:with field='img' type='org.activityinfo.ui.full.client.icon.ImageResources'/>
  <ui:with field='res' type='org.activityinfo.ui.full.client.i18n.UIConstants'/>

  <g:HTMLPanel>
    <div class="form-group">
      <label class="col-sm-1 control-label">
        <ui:text from='{res.cardinality}'/>
      </label>
      <div class="col-sm-11">
        <a:RadioButton name="cardinality" ui:field="singleChoice" formValue="true">
          <ui:text from='{res.singleChoice}'/>
        </a:RadioButton>
        <a:RadioButton name="cardinality" ui:field="multipleChoice">
          <ui:text from='{res.multipleChoice}'/>
        </a:RadioButton>
        <br/>
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-1 control-label">
        <ui:text from='{res.values}'/>
      </label>
      <div class="col-sm-11">
        <div class="panel panel-default">
          <div class="panel-body">
            <g:HorizontalPanel>
                <cell:CellTable ui:field="table" tableLayoutFixed="true" autoHeaderRefreshDisabled="true"
                                autoFooterRefreshDisabled="true" rowCount="10"/>
              <g:VerticalPanel>
                <a:Button ui:field="addButton" style="DEFAULT" addStyleNames="{style.btn-custom}">
                  <img src="{img.add.getSafeUri}" alt="Add"/>
                </a:Button>
                <a:Button ui:field="removeButton" style="DEFAULT" addStyleNames="{style.btn-custom}">
                  <img src="{img.delete.getSafeUri}" alt="Remove"/>
                </a:Button>
              </g:VerticalPanel>
            </g:HorizontalPanel>
            <br/>
            <div class="has-error">
              <div class="help-block" ui:field="errorContainer"/>
            </div>
          </div>
        </div>
      </div>
    </div>
  </g:HTMLPanel>
</ui:UiBinder>