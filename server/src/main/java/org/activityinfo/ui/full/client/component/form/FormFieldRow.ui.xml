<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:form="urn:import:org.activityinfo.ui.full.client.component.form">

  <ui:style>
    .field-row {
      margin-top: 5px;
      margin-bottom: 5px;
    }
  </ui:style>

  <ui:with field='img' type='org.activityinfo.ui.full.client.icon.ImageResources'/>
  <ui:with field='i18n' type='org.activityinfo.i18n.shared.UiConstants'/>
  <ui:with field='aiStyle' type='org.activityinfo.ui.full.client.style.TransitionBundle'/>

  <g:HTMLPanel addStyleNames="bs">
    <form:FormSectionInlineEdit ui:field="addSectionPanel" addStyleNames="{aiStyle.newUiStyle.sectionMarginLeft} hidden"/>
    <form:FormFieldInlineEdit ui:field="editFieldPanel" addStyleNames="hidden" editMode="true"/>
    <form:FormFieldInlineEdit ui:field="addFieldPanel" addStyleNames="hidden"/>
    <div class="row {style.field-row}" ui:field="rowContainer">
      <div class="col-sm-2">
        <p class="edit">
          <div ui:field="label"/>
        </p>
      </div>
      <div class="col-sm-3">
        <g:FlowPanel ui:field="control" width="100%"/>
      </div>
      <div class="col-sm-1">
        <div ui:field="unit"/>
      </div>
      <div class="col-sm-3">
        <div ui:field="description"/>
      </div>
      <div class="col-sm-3">
        <form:RowToolbar ui:field="toolbar"/>
      </div>
    </div>
  </g:HTMLPanel>
</ui:UiBinder>