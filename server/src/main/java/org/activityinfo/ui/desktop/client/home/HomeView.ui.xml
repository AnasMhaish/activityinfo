<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui" 
  xmlns:c="urn:import:com.google.gwt.user.cellview.client">

  <ui:with field='b' type='com.bedatadriven.rebar.bootstrap.client.Bootstrap'/>
  
  <g:HTMLPanel>
    <div class="{b.row}">
      <div class="{b.colMd4}">
        <h2>My Databases</h2>
        <g:Widget ui:field="databaseList" />      
      </div>
      <div class="{b.colMd4}">
        <h2>Recent Activity</h2>   
      </div>
      <div class="{b.colMd4}">
        <h2>Help</h2>   
        
        <g:Anchor ui:field="newDatabaseLink" styleName="{b.btn}" text="Create a new database"/>
        
      </div>
  </div>
  </g:HTMLPanel>

</ui:UiBinder> 