<?xml version="1.0" encoding="UTF-8"?>
<module rename-to='DesktopUI'>
  <inherits name='com.google.gwt.user.User' />
  <inherits name="com.google.gwt.activity.Activity" />
  <inherits name='com.github.gwtbootstrap.Bootstrap' />
  <inherits name='com.github.gwtbootstrap.datepicker.Datepicker' />
  <inherits name='com.github.gwtbootstrap.datetimepicker.Datetimepicker' />
  
  <inherits name="org.activityinfo.ui.core.CoreUI"/>

  <replace-with class="org.activityinfo.ui.desktop.client.ClientFactoryImpl">
    <when-type-is class="org.activityinfo.ui.desktop.client.ClientFactory" />
  </replace-with>
  
  <set-property name="bootstrap.responsiveDesign" value="true" />
  
  <entry-point class='org.activityinfo.ui.desktop.client.Desktop' />
  
  <source path='client' />

</module>