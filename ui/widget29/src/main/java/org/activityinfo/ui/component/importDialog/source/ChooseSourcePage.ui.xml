<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
  <ui:style>

  </ui:style>

  <ui:with field="styles" type="org.activityinfo.ui.style.BaseStyle"/>

  <ui:with field="i18n" type="org.activityinfo.i18n.shared.UiConstants"/>

  <g:HeaderPanel>
    <g:HTMLPanel>
      <p class="lead"><ui:text from="{i18n.pasteSpreadsheetInstructions}"/></p>
    </g:HTMLPanel>

    <g:TextArea ui:field="textArea" addStyleNames="{styles.formControl}"
                width="100%" height="100%"/>

  </g:HeaderPanel>
</ui:UiBinder> 