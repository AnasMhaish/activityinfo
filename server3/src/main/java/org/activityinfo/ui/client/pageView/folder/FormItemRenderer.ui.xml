<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'>

  <ui:with field='label' type='java.lang.String'/>
  <ui:with field='description' type='java.lang.String'/>
  <ui:with field='link' type='java.lang.String'/>


  <div class="media">
    <a class="pull-left" href="#">
      <i class="fa fa-edit media-object"/>
    </a>
    <div class="media-body">
      <h4 class="media-heading"><a href="{link}"><ui:text from="{label}"/></a></h4>
      <small class="media-desc"><ui:text from="{description}"/></small>
    </div>
  </div>

</ui:UiBinder>